#include <stdio.h>
#include <stdlib.h>

int *vetorSoma(int n, int *vet1, int *vet2, int *vetSoma) {

    int i;

    for(i = 0; i < n; i++) {
        vetSoma[i] = vet1[i] + vet2[i];
    }

    return vetSoma[i];

}

int main() {

    int i, n;

    printf("Digite o tamanho dos vetores: ");
    scanf("%d", &n);

    int *vetor1, *vetor2, vetorDaSomar[n];

    vetor1 = (int*) malloc(n*sizeof(int));
    vetor2 = (int*) malloc(n*sizeof(int));

    printf("Digite os valores do vetor 1: \n");

    for(i = 0; i < n; i++) {
        scanf("%d", &vetor1[i]);
    }

    printf("\n");

    printf("Digite os valores do vetor 2: \n");

    for(i = 0; i < n; i++) {
        scanf("%d", &vetor2[i]);
    }

    vetorSoma(n, vetor1, vetor2, vetorDaSomar);

    printf("Resultado: ");

    for(i = 0; i < n; i++) {
        printf("%d ", vetorDaSomar[i]);
    }

    free(vetor1);

    return 0;
}
